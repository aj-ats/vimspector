{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "run": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "type": "python",
        "cwd": "${workspaceRoot}",
        "program": "${file}",
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "subProcess": true
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "Y",
          "userUnhandled": ""
        }
      }
    }
  }
}
